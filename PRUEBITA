                        <th>DIAGNOSTICO</th>
                        <th>PRESUPUESTO</th>
                        <th>COMENTARIOS</th>
                        <th>ESTADO</th>
                        <th>CHECK</th> <!-- Nueva columna para el check -->
                        <th>ACCIONES</th>
                    </tr>
