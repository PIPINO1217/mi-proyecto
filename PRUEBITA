<script>
    // Cargar el estado del checkbox al inicio
    window.onload = function() {
        const checkMensajes = document.getElementById("check-mensajes");
        checkMensajes.checked = localStorage.getItem("checkMensajes") === "true"; // Verifica el estado guardado
    };

    // Guardar el estado del checkbox
    function saveCheckboxState() {
        const checkMensajes = document.getElementById("check-mensajes");
        localStorage.setItem("checkMensajes", checkMensajes.checked); // Guarda el estado actual
    }
</script>


                        <h2>EQUIPOS</h2>
            <table id="base-datos">
                <thead>
                    <tr>
                        <th>NOMBRE</th>
